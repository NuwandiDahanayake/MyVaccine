<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="729dp"
    android:layout_width="409dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundgray"
        tools:context=".AddapprovalHospital">

        <TextView
            android:id="@+id/status_text"
            android:layout_width="263dp"
            android:layout_height="26dp"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace"
            android:text="Status - Approved"
            android:textColor="#4CAF50"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/mobileno_text2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/mobileno_text2"
            app:layout_constraintTop_toBottomOf="@+id/mobileno_text2" />

        <TextView
            android:id="@+id/mobileno_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="Mobile no - 0716 896 555"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/doctor_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/namenationalcolombo_text"
            app:layout_constraintTop_toBottomOf="@+id/doctor_text" />

        <TextView
            android:id="@+id/doctor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="Doctor - Dr.Manoji"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/namenationalcolombo_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/namenationalcolombo_text"
            app:layout_constraintTop_toBottomOf="@+id/namenationalcolombo_text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_menu_24"
            android:drawableRight="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="138dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textColor="#057262"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/approvehospital_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="Approve Hospital"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="306dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="#DDD2D2"
            android:queryHint="Search here"
            app:layout_constraintEnd_toEndOf="@+id/approvehospital_text"
            app:layout_constraintStart_toStartOf="@+id/approvehospital_text"
            app:layout_constraintTop_toBottomOf="@+id/approvehospital_text" />

        <TextView
            android:id="@+id/namenationalcolombo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:fontFamily="monospace"
            android:text="Name - National Hospital - Colombo"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/searchView"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/searchView"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Update"
            android:fontFamily="monospace"
            android:textColor="#9C27B0"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/status_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/status_text"
            app:layout_constraintTop_toBottomOf="@+id/status_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>