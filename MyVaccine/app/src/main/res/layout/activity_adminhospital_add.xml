<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="729dp"
    android:layout_width="409dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundgray"
        tools:context=".AdminhospitalAdd">

        <Button
            android:id="@+id/deletehospital_btn2"
            android:layout_width="111dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:background="#980617"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ladyridgeway_text"
            app:layout_constraintHorizontal_bias="0.885"
            app:layout_constraintStart_toStartOf="@+id/nattionalcolombo_text"
            app:layout_constraintTop_toBottomOf="@+id/ladyridgeway_text" />

        <Button
            android:id="@+id/updatehospital_btn2"
            android:layout_width="111dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:background="#4CAF50"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/nattionalcolombo_text"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="@+id/ladyridgeway_text"
            app:layout_constraintTop_toBottomOf="@+id/ladyridgeway_text" />

        <Button
            android:id="@+id/deletehospital_btn"
            android:layout_width="111dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:background="#980617"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/nattionalcolombo_text"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/nattionalcolombo_text"
            app:layout_constraintTop_toBottomOf="@+id/nattionalcolombo_text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_menu_24"
            android:drawableRight="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="138dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textColor="#057262"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.068" />
        <TextView
            android:id="@+id/hospitallist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Hospital List"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.118" />

        <EditText
            android:id="@+id/editTexthospitalname"
            android:layout_width="304dp"
            android:layout_height="43dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:hint="Hospital Name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/hospitallist"
            app:layout_constraintStart_toStartOf="@+id/hospitallist"
            app:layout_constraintTop_toBottomOf="@+id/hospitallist" />

        <Button
            android:id="@+id/createhospital_btn"
            android:layout_width="206dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:text="Create Hospital"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/editTexthospitalname"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/editTexthospitalname"
            app:layout_constraintTop_toBottomOf="@+id/editTexthospitalname" />

        <TextView
            android:id="@+id/nattionalcolombo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:fontFamily="monospace"
            android:text="National Hospital - Colombo"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/createhospital_btn"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/createhospital_btn"
            app:layout_constraintTop_toBottomOf="@+id/createhospital_btn" />

        <Button
            android:id="@+id/updatehospital_btn"
            android:layout_width="111dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:background="#4CAF50"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/nattionalcolombo_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nattionalcolombo_text"
            app:layout_constraintTop_toBottomOf="@+id/nattionalcolombo_text" />

        <TextView
            android:id="@+id/ladyridgeway_text"
            android:layout_width="333dp"
            android:layout_height="59dp"
            android:layout_marginTop="104dp"
            android:fontFamily="monospace"
            android:text="Lady Ridgeway - Children Hospital Colombo"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/deletehospital_btn"
            app:layout_constraintStart_toStartOf="@+id/updatehospital_btn"
            app:layout_constraintTop_toBottomOf="@+id/nattionalcolombo_text" />

        <TextView
            android:id="@+id/nationalkandy_text"
            android:layout_width="334dp"
            android:layout_height="34dp"
            android:layout_marginTop="120dp"
            android:fontFamily="monospace"
            android:text="National Hospital - Kandy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/deletehospital_btn2"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="@+id/updatehospital_btn2"
            app:layout_constraintTop_toBottomOf="@+id/ladyridgeway_text" />

        <Button
            android:id="@+id/updatehospital_btn3"
            android:layout_width="111dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:background="#4CAF50"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/nationalkandy_text"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="@+id/nationalkandy_text"
            app:layout_constraintTop_toBottomOf="@+id/nationalkandy_text" />

        <Button
            android:id="@+id/deletehospital_btn3"
            android:layout_width="111dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:background="#980617"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/nationalkandy_text"
            app:layout_constraintHorizontal_bias="0.896"
            app:layout_constraintStart_toStartOf="@+id/nationalkandy_text"
            app:layout_constraintTop_toBottomOf="@+id/nationalkandy_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>