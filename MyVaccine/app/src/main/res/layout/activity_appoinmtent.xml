<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="322dp">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundgray"
    tools:context=".Appoinmtent">

    <TextView
        android:id="@+id/appointmentmenubar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_menu_24"
        android:drawableRight="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="138dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="#057262"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/bookappointment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="Book Appointment"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/appointmentmenubar"
        app:layout_constraintStart_toStartOf="@+id/appointmentmenubar"
        app:layout_constraintTop_toBottomOf="@+id/appointmentmenubar" />

    <EditText
        android:id="@+id/dateofappointment_edittxt"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Date of Appointment  (mm-dd-yyyy)"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/bookappointment_image"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="@+id/bookappointment_image"
        app:layout_constraintTop_toBottomOf="@+id/bookappointment_image" />

    <EditText
        android:id="@+id/time_txt"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Time  (mm-dd-yyyy)"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="@+id/dateofappointment_edittxt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dateofappointment_edittxt"
        app:layout_constraintTop_toBottomOf="@+id/dateofappointment_edittxt" />

    <EditText
        android:id="@+id/childname_txt"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Child Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/time_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/time_txt"
        app:layout_constraintTop_toBottomOf="@+id/time_txt" />

    <EditText
        android:id="@+id/age_txt"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/childname_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/childname_txt"
        app:layout_constraintTop_toBottomOf="@+id/childname_txt" />

    <EditText
        android:id="@+id/doctorname_txt"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Doctor Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/age_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/age_txt"
        app:layout_constraintTop_toBottomOf="@+id/age_txt" />

    <ImageButton
        android:id="@+id/nationallocation_image"
        android:layout_width="26dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/doctorname_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/doctorname_txt"
        app:layout_constraintTop_toBottomOf="@+id/doctorname_txt"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_location_on_24" />

    <Button
        android:id="@+id/booappointment_btn"
        android:layout_width="134dp"
        android:layout_height="53dp"
        android:layout_marginTop="56dp"
        android:background="@color/black"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorLink="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/doctorname_txt"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/nationallocation_btn"
        app:layout_constraintTop_toBottomOf="@+id/doctorname_txt" />

    <ImageView
        android:id="@+id/bookappointment_image"
        android:layout_width="280dp"
        android:layout_height="209dp"
        app:layout_constraintEnd_toEndOf="@+id/bookappointment_txt"
        app:layout_constraintStart_toStartOf="@+id/bookappointment_txt"
        app:layout_constraintTop_toBottomOf="@+id/bookappointment_txt"
        app:srcCompat="@drawable/bookhospitalimage" />

    <Button
        android:id="@+id/nationallocation_btn"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:text="Click here"
        android:textColor="#9C27B0"
        android:textColorLink="#2196F3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/doctorname_txt"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="@+id/doctorname_txt"
        app:layout_constraintTop_toBottomOf="@+id/doctorname_txt" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

