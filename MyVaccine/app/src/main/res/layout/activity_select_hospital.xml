<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundgray"
        tools:context=".SelectHospital"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/menubar_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_menu_24"
            android:drawableRight="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="138dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textColor="#057262"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051" />

        ///Topic Hospital
        <TextView
            android:id="@+id/hospital_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Hospitals"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/menubar_hospital"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/menubar_hospital"
            app:layout_constraintTop_toBottomOf="@+id/menubar_hospital" />

        ///NationalHospitalColombo
        <Button
            android:id="@+id/nationalhospital_btn"
            android:layout_width="352dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:text="National Hospital - Colombo"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/hospital_img"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintStart_toStartOf="@+id/hospital_img"
            app:layout_constraintTop_toBottomOf="@+id/hospital_img" />

        ///Lady Ridgeway Children Hospital
        <Button
            android:id="@+id/ladyridgeway_btn"
            android:layout_width="352dp"
            android:layout_height="54dp"
            android:layout_marginTop="28dp"
            android:text="Lady Ridgeway Children Hospital Colombo"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintEnd_toEndOf="@+id/nationalhospital_btn"
            app:layout_constraintStart_toStartOf="@+id/nationalhospital_btn"
            app:layout_constraintTop_toBottomOf="@+id/nationalhospital_btn" />

        ///National Hospital Kandy
        <Button
            android:id="@+id/nationalkandy_btn"
            android:layout_width="352dp"
            android:layout_height="54dp"
            android:layout_marginTop="28dp"
            android:text="National Hospital - Kandy"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintEnd_toEndOf="@+id/ladyridgeway_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ladyridgeway_btn"
            app:layout_constraintTop_toBottomOf="@+id/ladyridgeway_btn" />

        ///Central Hospital Badulla
        <Button
            android:id="@+id/centralhospital_btn"
            android:layout_width="352dp"
            android:layout_height="54dp"
            android:layout_marginTop="28dp"
            android:text="Central Hospital - Badulla"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintEnd_toEndOf="@+id/nationalkandy_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nationalkandy_btn"
            app:layout_constraintTop_toBottomOf="@+id/nationalkandy_btn" />

        ///Genaral Hospital Anuradhapuraya
        <Button
            android:id="@+id/genaralhospital_btn"
            android:layout_width="352dp"
            android:layout_height="54dp"
            android:layout_marginTop="28dp"
            android:fontFamily="monospace"
            android:text="Genaral Hospital - Anuradhapuraya"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/centralhospital_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/centralhospital_btn"
            app:layout_constraintTop_toBottomOf="@+id/centralhospital_btn"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/hospital_img"
            android:layout_width="243dp"
            android:layout_height="195dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/hospital_txt"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/hospital_txt"
            app:layout_constraintTop_toBottomOf="@+id/hospital_txt"
            app:srcCompat="@drawable/listimage" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
