<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgray"
    tools:context=".Why_Vaccinationpage">

    <TextView
        android:id="@+id/fourth_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Long-term health benefits"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/third_txt"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/third_txt"
        app:layout_constraintTop_toBottomOf="@+id/third_txt" />

    <TextView
        android:id="@+id/menubar_whyvaccination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_menu_24"
        android:drawableRight="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="138dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/reason_txt"
        android:layout_width="322dp"
        android:layout_height="133dp"
        android:fontFamily="monospace"
        android:text="Vaccinating children at the right time is crucial for several reasons:"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <ImageView
        android:id="@+id/baby_img"
        android:layout_width="205dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="@+id/reason_txt"
        app:layout_constraintStart_toStartOf="@+id/reason_txt"
        app:layout_constraintTop_toBottomOf="@+id/reason_txt"
        app:srcCompat="@drawable/baby" />

    <TextView
        android:id="@+id/first_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Protection against diseases"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="@+id/baby_img"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/baby_img"
        app:layout_constraintTop_toBottomOf="@+id/baby_img" />

    <TextView
        android:id="@+id/second_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Disease prevention in the community"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="@+id/first_txt"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/first_txt"
        app:layout_constraintTop_toBottomOf="@+id/first_txt" />

    <TextView
        android:id="@+id/third_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Prevention of complications and hospitalizations"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/second_txt"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/second_txt"
        app:layout_constraintTop_toBottomOf="@+id/second_txt" />

    <TextView
        android:id="@+id/fivth_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Compliance with public health recommendations"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fourth_txt2"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/fourth_txt2"
        app:layout_constraintTop_toBottomOf="@+id/fourth_txt2" />

</androidx.constraintlayout.widget.ConstraintLayout>